{% extends 'base.html.twig' %}

{% block title %}Provincia index{% endblock %}

{% block body %}
    <h1>Listado de Provincias</h1>

    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Descripci√≥n</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
        {% for provincium in provincias %}
            <tr>
                <td>{{ provincium.id }}</td>
                <td>{{ provincium.descripcion }}</td>
                <td>
                    <a href="{{ path('app_provincia_show', {'id': provincium.id}) }}">Mostrar</a>
