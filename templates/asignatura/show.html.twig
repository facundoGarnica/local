{% extends 'base.html.twig' %}

{% block title %}Asignatura{% endblock %}

{% block body %}
    <h1>Mostrando Asignaturas</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>ID</th>
                <td>{{ asignatura.id }}</td>
            </tr>
            <tr>
                <th>Nombre</th>
                <td>{{ asignatura.nombre }}</td>
            </tr>
            <tr>
                <th>Año</th>
                <td>{{ asignatura.anio }}</td>
            </tr>
            <tr>
                <th>Módulos</th>
                <td>{{ asignatura.cant_mod }}</td>
            </tr>
            <tr>
                <th>Duración</th>
                <td>{{ asignatura.duracion }}</td>
            </tr>
            <tr>
                <th>Programa</th>
                <td>{{ asignatura.programa }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_asignatura_index') }}">Regresar</a>

    <a href="{{ path('app_asignatura_edit', {'id': asignatura.id}) }}">Editar</a>

    {{ include('asignatura/_delete_form.html.twig') }}
{% endblock %}
