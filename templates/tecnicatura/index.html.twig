{% extends 'base.html.twig' %}

{% block title %}Tecnicatura index{% endblock %}

{% block body %}
    <h1>Listado de Tecnicaturas</h1>

    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Nombre</th>
                <th>Duración</th>
                <th>Cantidad de Asignaturas</th>
                <th>Número de Resolución</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
        {% for tecnicatura in tecnicaturas %}
            <tr>
                <td>{{ tecnicatura.id }}</td>
                <td>{{ tecnicatura.nombre }}</td>
                <td>{{ tecnicatura.duracion }}</td>
                <td>{{ tecnicatura.cantidadAsignaturas }}</td>
                <td>{{ tecnicatura.numeroResolucion }}</td>
                <td>
                    <a href="{{ path('app_tecnicatura_show', {'id': tecnicatura.id}) }}">Mostrar</a>
                    <a href="{{ path('app_tecnicatura_edit', {'id': tecnicatura.id}) }}">Editar</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">No se encontraron registros</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_tecnicatura_new') }}">Crear Nueva Tecnicatura</a>
{% endblock %}
