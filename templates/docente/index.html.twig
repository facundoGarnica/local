{% extends 'base.html.twig' %}

{% block title %}Docente index{% endblock %}

{% block body %}
    <h1>Docente index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Foja</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for docente in docentes %}
            <tr>
                <td>{{ docente.id }}</td>
                <td>{{ docente.foja}}</td>
                <td>
                    <a href="{{ path('app_docente_show', {'id': docente.id}) }}">show</a>
                    <a href="{{ path('app_docente_edit', {'id': docente.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_docente_new') }}">Create new</a>
{% endblock %}
