{% extends 'base.html.twig' %}

{% block title %}Turno index{% endblock %}

{% block body %}
    <h1>Listado de Turnos</h1>

    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Descripci√≥n</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
        {% for turno in turnos %}
            <tr>
                <td>{{ turno.id }}</td>
                <td>{{ turno.descripcion }}</td>
                <td>
                    <a href="{{ path('app_turno_show', {'id': turno.id}) }}">Mostrar</a>
